<%- include("./partials/header") %> <%- include("./partials/navbar") %>

<div class="homePage">
    <h4 class="text-center pt-4">Welcome to your Home Page</h4>
    <div class="card container mt-5">
        <h4 class="my-3">Write a post</h4>
        <form action="/compose" method="POST">
            <input type="text" name="title" placeholder="Enter Title" class="form-control" required />
            <textarea
                name="content"
                cols="10"
                rows="5"
                class="mt-1 form-control"
                placeholder="Enter Content Here..."
                required
            ></textarea>
            <input type="submit" value="Post something" class="mt-2 btn btn-md btn-success mb-3" required />
        </form>
    </div>

    <div class="container mt-5 py-5">
        <h4 style="text-align: center">Your most recent blog posts</h4>
        <% blogs.reverse() %> <% blogs.forEach(blog => { %>
        <div class="card mt-3">
            <div class="card-body">
                <div class="row justify-content-between">
                    <h4 class="card-title pl-3"><%= blog.title %></h4>
                    <p class="text-muted">
                        <small
                            ><small style="color: rgb(194, 194, 194)">published at: <%= blog.postedAt %></small></small
                        >
                    </p>
                </div>
                <p class="card-text"><%= blog.content.slice(0, 99) %> ....</p>
                <a href=" /delete/<%= blog._id %>" class="btn btn-outline-secondary">Delete</a>
                <a href=" /edit/<%= blog._id %>" class="btn btn-outline-warning">Edit</a>
            </div>
        </div>
        <%}) %>
    </div>
</div>

<%- include("./partials/footer") %>
